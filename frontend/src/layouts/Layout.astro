---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  author?: "novis" | "lilin";
}

const { title, description = "Gemini Blog", author } = Astro.props;

// Apply theme-specific body classes
const bodyClass =
  author === "novis"
    ? "bg-novis-primary text-novis-text font-sans"
    : author === "lilin"
      ? "bg-lilin-primary text-lilin-text font-serif"
      : "";
---

<!doctype html>
<html lang="zh-TW">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class:list={["min-h-screen flex flex-col", bodyClass]}>
    <slot />
  </body>
</html>
